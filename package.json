{
  "name": "native-audio-sdk",
  "version": "0.1.0",
  "description": "Cross-platform (Win/Mac) Native Audio SDK for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "install": "cmake-js compile",
    "build": "npm run build:native && npm run build:ts",
    "build:ts": "tsc",
    "build:native": "cmake-js compile",
    "build:native:debug": "cmake-js compile --debug",
    "build:tests": "cmake -S . -B build -DBUILD_TESTS=ON && cmake --build build --config Release",
    "test": "jest",
    "test:native": "cd build && ctest -C Release --output-on-failure",
    "test:cli": "node ./test/cli_test.js",
    "clean": "rimraf dist build"
  },
  "keywords": [
    "audio",
    "sdk",
    "native",
    "cpp",
    "wasapi",
    "avfoundation",
    "screencapturekit"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "cmake-js": "^7.2.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}